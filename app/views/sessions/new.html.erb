<% provide(:title, 'Login') %>

  <div class="static-pages">
  
  <h1>Login</h1>
  <%= render 'shared/flash' %>
    <div class="row">
      
      <div class="col-md-4 col-md-offset-4">
        <%= form_for(:session, url:login_path) do |f| %>
          <%= f.label :email %>
          <%= f.email_field :email %>
    
          <%= f.label :password %>
          <%= f.password_field :password %>
    
          <%= f.submit "Login", class: "btn btn-primary" %>
    
          <p>New user? <%= link_to "Sign up now!", signup_path %></p>
        <% end %>
      </div>
      </div>
    </div>
  </div>
